extends layout

block content
    h3 #{person.name}
    h4 Events you created
    each event in person.createdEvents
      p #{event.name}
    h4 Events you plan to attend 
    each event in person.upcomingEvents
      p #{event.name}
    h4 Your contacts: 
    each contact in person.contacts 
      p #{contact.name}
    h4 Your comments
    each comment in person.comments
      p #{comment.comment} #{comment.createdAt}
  
       