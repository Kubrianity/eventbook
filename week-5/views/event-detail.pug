extends layout

block content
    p This event will be held in #{event.place} at #{event.date}.
    p #{event.attendees.length} people are planning to join this event!
    each organizer in event.organizers
      p Organizers: #{organizer.name}
    each attendee in event.attendees
      p Attendees: #{attendee.name}
    each comment in event.comments
      p Reviews: #{comment.comment} by #{comment.author}